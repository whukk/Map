<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kk.map.MainActivity">

    <Button
        android:text="最短路径"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nearest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="超市选址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nearest"
        android:layout_alignLeft="@+id/nearest"
        android:layout_alignStart="@+id/nearest"
        android:id="@+id/setMarket"/>

    <Button
        android:text="添加新点"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creatPoints"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="更改位置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeLocation"
        android:layout_above="@+id/creatPoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="删除"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox_showRoute"
        android:layout_alignLeft="@+id/checkBox_showRoute"
        android:layout_alignStart="@+id/checkBox_showRoute"
        android:visibility="invisible"
        android:id="@+id/delete_button"/>

    <com.example.kk.map.Myview
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:text="显示路径"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_showRoute"
        android:checked="true"
        android:layout_alignBaseline="@+id/creatPoints"
        android:layout_alignBottom="@+id/creatPoints"
        android:layout_centerHorizontal="true"/>

